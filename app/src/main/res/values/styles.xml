<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RecipeNameTextStyle">
        <item name="android:textSize">@dimen/recipe_name_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ServingTextStyle">
        <item name="android:textSize">@dimen/serving_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SingleItemRecipeDetailTextStyle">
        <item name="android:textSize">@dimen/single_recipe_detail_large_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="IngredientTextStyle">
        <item name="android:textSize">@dimen/ingredient_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
